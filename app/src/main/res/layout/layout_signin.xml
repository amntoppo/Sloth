<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/sloth_splash">

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/button_phone_signin"
            android:padding="16dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_add_ic_call_24"
            android:text="@string/sign_in_with_phone"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/button_email_signin"
            android:padding="16dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:text="@string/sign_in_with_google"
            android:textColor="@color/white"
            />

    </LinearLayout>

</RelativeLayout>